                        </Grid>                        
                    </Label>
                </Button>
                <Button x:Name="EntityButton_Change" Height="120" Width="120" Margin="120,90,0,0" Background="{DynamicResource PtBrushEntity1}" Click="ChangeCurrentEntityButton_Click" 
                        MouseLeave="buttonMouseOut" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Background="{DynamicResource PtGradientEntity1}" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" 
                           HorizontalContentAlignment="Center" Style="{DynamicResource TileLabelStyle2}">
                        <Grid>
                            <Frame Content="{DynamicResource ChangeEntityIcon}" Margin="75,75,0,0"/>
                            <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Change Current Entity" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>
                <Button x:Name="EntityButton_Default" Height="120" Width="120" Margin="240,90,0,0" Background="{DynamicResource PtBrushEntity1}" Click="ChangeDefaultEntityButton_Click" 
