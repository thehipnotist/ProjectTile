                </Button>                
                
                <Button x:Name="ClientButton_View" Height="120" Width="120" Margin="120,255,0,0" Background="{DynamicResource PtBrushClient1}" MouseLeave="buttonMouseOut" HorizontalAlignment="Left" 
                        VerticalAlignment="Top" Grid.Column="2" Click="ClientButton_View_Click" Visibility="Hidden" Style="{DynamicResource TileStyle}">
