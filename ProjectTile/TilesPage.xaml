                        <Grid>
                            <Frame Content="{DynamicResource ViewIcon2}" Margin="75,75,0,0"/>
                            <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="View Products" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>
                <Button x:Name="ProductButton_New" Height="120" Width="120" Margin="330,210,0,0" Background="{DynamicResource PtBrushProduct1}" MouseLeave="buttonMouseOut" HorizontalAlignment="Left" 
                        VerticalAlignment="Top" Visibility="Hidden" Click="ProductButton_New_Click" Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Background="{DynamicResource PtGradientProduct1}" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" 
                           HorizontalContentAlignment="Center" Style="{DynamicResource TileLabelStyle}">
                        <Grid>
                            <Frame Content="{DynamicResource AddIcon3}" Margin="75,75,0,0"/>
                            <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Create New Product" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>
                <Button x:Name="ProductButton_Amend" Height="120" Width="120" Margin="330,330,0,0" Background="{DynamicResource PtBrushProduct1}" MouseLeave="buttonMouseOut" HorizontalAlignment="Left" 
                        VerticalAlignment="Top" Visibility="Hidden" Click="ProductButton_Amend_Click" Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Background="{DynamicResource PtGradientProduct1}" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" 
