                    </Label>
                </Button>

                <Button x:Name="LoginButton_Login" HorizontalAlignment="Left" Height="120" Margin="375,90,0,0" VerticalAlignment="Top" Width="120" Background="{DynamicResource PtBrushLogin1}" 
                        MouseLeave="buttonMouseOut" Click="LoginButton_Login_Click" Visibility="Hidden" Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Background="{DynamicResource PtGradientLogin1}" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" 
                           HorizontalContentAlignment="Center" Style="{DynamicResource TileLabelStyle2}">
