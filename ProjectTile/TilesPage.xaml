                    </Label>
                </Button>

                <Button x:Name="StaffButton_View" Height="120" Width="120" Margin="285,90,0,0" Background="{DynamicResource PtBrushStaff1}" MouseLeave="buttonMouseOut" HorizontalAlignment="Left" 
                        VerticalAlignment="Top" Visibility="Hidden" Click="StaffButton_View_Click" Grid.Column="2" Style="{DynamicResource TileStyle}">
