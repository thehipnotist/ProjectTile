                <Button x:Name="EntityButton_Amend" Height="120" Width="120" Margin="0,330,0,0" Background="{DynamicResource PtBrushEntity1}" Click="AmendEntityButton_Click" MouseLeave="buttonMouseOut" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" Grid.Column="2" Style="{DynamicResource TileStyle}">
