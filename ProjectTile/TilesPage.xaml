<Page x:Class="ProjectTile.TilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="535" d:DesignWidth="830"
	Title="TilesPage" Loaded="TilesPage_Loaded">

    <Grid x:Name="TilesGrid" FocusManager.IsFocusScope="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15" MinWidth="15" MaxWidth="15"/>
            <ColumnDefinition x:Name="CentreColumn" Width="655*" MinWidth="655"/>
            <ColumnDefinition Width="160" MinWidth="160" MaxWidth="160"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" MinHeight="45" MaxHeight="45"/>
            <RowDefinition x:Name="MiddleRow" Height="475*" MinHeight="475"/>
            <RowDefinition Height="15" MinHeight="15" MaxHeight="15"/>
        </Grid.RowDefinitions>

        <Frame x:Name="HeaderImage" Content="{DynamicResource TilesIcon}" Grid.Row="0" Grid.Column="1" Margin="0,5,0,0" VerticalAlignment="Top" Width="20" HorizontalAlignment="Left"/>
        <Frame x:Name="HeaderImage2" Content="{StaticResource MapIcon}" Grid.Row="0" Grid.Column="1" Margin="25,5,0,0" VerticalAlignment="Top" Width="20" HorizontalAlignment="Left"/>
        <Label x:Name="PageHeader" Content="Main Menu" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="605" FontWeight="Bold" Background="{x:Null}" Foreground="White" 
               Grid.Column="1" Margin="50,0,0,0"/>
        
        <Border Height="Auto" Width="Auto" MinHeight="475" BorderBrush="{DynamicResource PtBrushMenuBlue}" MinWidth="655" Style="{DynamicResource SectionBorder}" Grid.Column="1" 
                Grid.Row="1">
            <Grid MinWidth="655" Width="{Binding ElementName=CentreColumn, Path=ActualWidth}" Focusable="True" IsManipulationEnabled="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="{Binding ElementName=MiddleRow, Path=ActualHeight}" MinHeight="475"/>
                </Grid.RowDefinitions>

                <!-- Note that the Welcome label must go in front of Instructions and must cover the full area, as it is also used as a mouse-down target for anything outside the buttons -->
                <Label x:Name="Instructions" Content="Hover over a main 'tile' to 'expand' it temporarily. Click on it to keep it expanded (click elsewhere to cancel)." 
                       HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top" Width="630" Height="30" Grid.Column="1" Grid.ColumnSpan="2"/>
                <Label x:Name="Welcome" Content="Welcome to ProjectTile." HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" MinHeight="475" MinWidth="655" 
                       MouseDown="mouseOffButtons" Padding="20" Height="{Binding ElementName=MiddleRow, Path=ActualHeight}" Width="{Binding ElementName=CentreColumn, Path=ActualWidth}" Grid.ColumnSpan="3"  />

                <!-- Note that the main tiles must go behind the others, otherwise they cause MouseLeave events in the other buttons -->
                <Button x:Name="EntityButton" HorizontalAlignment="Left" Height="120" Margin="0,90,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Background="{DynamicResource PtBrushEntity2}" 
                        MouseEnter="buttonMouseOver" MouseLeave="buttonMouseOut" GotFocus="buttonGotFocus" LostFocus="buttonLostFocus" Click="button_Click" ToolTip="{DynamicResource EntitiesTip}" 
                        Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" 
                           Style="{DynamicResource TileLabelStyle}" Background="{DynamicResource PtGradientEntity2}">
                        <Grid>
                            <Frame x:Name="EntitiesImage" Content="{DynamicResource EntitiesIcon}" Margin="0,0,75,75"/>
                            <TextBlock x:Name="EntityText" TextAlignment="Center" TextWrapping="Wrap" Text="Entities" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>
                <Button x:Name="StaffButton" HorizontalAlignment="Left" Height="120" Margin="165,90,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Background="{DynamicResource PtBrushStaff2}" 
                        MouseEnter="buttonMouseOver" MouseLeave="buttonMouseOut" GotFocus="buttonGotFocus" LostFocus="buttonLostFocus" Click="button_Click" ToolTip="{DynamicResource StaffTip}" 
                        Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                           Style="{DynamicResource TileLabelStyle2}" Background="{DynamicResource PtGradientStaff2}">
                        <Grid>
                            <Frame x:Name="StaffImage" Content="{DynamicResource StaffIcon}" Margin="0,0,75,75"/>
                            <TextBlock Name="StaffText" TextAlignment="Center" TextWrapping="Wrap" Text="Staff" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>
                <Button x:Name="ProductButton" HorizontalAlignment="Left" Height="120" Margin="330,90,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Background="{DynamicResource PtBrushProduct2}" 
                        MouseEnter="buttonMouseOver" MouseLeave="buttonMouseOut" GotFocus="buttonGotFocus" LostFocus="buttonLostFocus" Click="button_Click" ToolTip="{DynamicResource ProductTip}" 
                        Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                           Style="{DynamicResource TileLabelStyle}" Background="{DynamicResource PtGradientProduct2}">
                        <Grid>
                            <Frame x:Name="ProductImage" Content="{DynamicResource ProductIcon}" Margin="0,0,75,75"/>
                            <TextBlock x:Name="ProductText" TextAlignment="Center" TextWrapping="Wrap" Text="Products" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>                
                <Button x:Name="LoginButton" HorizontalAlignment="Left" Height="120" Margin="495,90,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Background="{DynamicResource PtBrushLogin2}" 
                        MouseEnter="buttonMouseOver" MouseLeave="buttonMouseOut" GotFocus="buttonGotFocus" LostFocus="buttonLostFocus" Click="button_Click" ToolTip="{DynamicResource LoginTip}" 
                        Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                           Style="{DynamicResource TileLabelStyle}" Background="{DynamicResource PtGradientLogin2}">
                        <Grid>
                            <Frame x:Name="LoginImage" Content="{DynamicResource LoginIcon}" Margin="0,0,75,75"/>
                            <TextBlock x:Name="LoginText" TextAlignment="Center" TextWrapping="Wrap" Text="Login" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>                
                <Button x:Name="ClientButton" HorizontalAlignment="Left" Height="120" Margin="0,255,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Background="{DynamicResource PtBrushClient2}" 
                        MouseEnter="buttonMouseOver" MouseLeave="buttonMouseOut" GotFocus="buttonGotFocus" LostFocus="buttonLostFocus" Click="button_Click" ToolTip="{DynamicResource ClientTip}" 
                        Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                           Style="{DynamicResource TileLabelStyle}" Background="{DynamicResource PtGradientClient2}">
                        <Grid>
                            <Frame x:Name="ClientImage" Content="{DynamicResource ClientIcon}" Margin="0,0,75,75"/>
                            <TextBlock x:Name="ClientText" TextAlignment="Center" TextWrapping="Wrap" Text="Clients" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>
                <Button x:Name="ProjectButton" HorizontalAlignment="Left" Height="120" Margin="165,255,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Background="{DynamicResource PtBrushProject2}" 
                        MouseEnter="buttonMouseOver" MouseLeave="buttonMouseOut" GotFocus="buttonGotFocus" LostFocus="buttonLostFocus" Click="button_Click" ToolTip="{DynamicResource ProjectTip}" 
                        Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                           Style="{DynamicResource TileLabelStyle}" Background="{DynamicResource PtGradientProject2}">
                        <Grid>
                            <Frame x:Name="ProjectImage" Content="{DynamicResource ProjectIcon}" Margin="0,0,75,75"/>
                            <TextBlock x:Name="ProjectText" TextAlignment="Center" TextWrapping="Wrap" Text="Projects" Foreground="White" VerticalAlignment="Center"/>
                        </Grid>
                    </Label>
                </Button>

                <Button x:Name="EntityButton_New" Height="120" Width="120" Margin="0,210,0,0" Background="{DynamicResource PtBrushEntity1}" Click="NewEntityButton_Click" HorizontalAlignment="Left" 
                        VerticalAlignment="Top" MouseLeave="buttonMouseOut" Visibility="Hidden" Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Background="{DynamicResource PtGradientEntity1}" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" 
                           HorizontalContentAlignment="Center" Style="{DynamicResource TileLabelStyle2}">
                        <Grid>
                            <Frame Content="{DynamicResource AddIcon}" Margin="75,75,0,0"/>
                            <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Create New Entity" VerticalAlignment="Center"/>
                        </Grid>
