                    </Label>
                </Button>
                <Button x:Name="LoginButton_Exit" HorizontalAlignment="Left" Height="120" Margin="495,210,0,0" VerticalAlignment="Top" Width="120" Background="{DynamicResource PtBrushExit2}"
