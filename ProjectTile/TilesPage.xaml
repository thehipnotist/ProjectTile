                        </Grid>                        
                    </Label>
                </Button>

                <Button x:Name="ProductButton_View" Height="120" Width="120" Margin="210,90,0,0" Background="{DynamicResource PtBrushProduct1}" MouseLeave="buttonMouseOut" HorizontalAlignment="Left" 
                        VerticalAlignment="Top" Visibility="Hidden" Click="ProductButton_View_Click" Grid.Column="2" Style="{DynamicResource TileStyle}">
                    <Label VerticalContentAlignment="Center" Background="{DynamicResource PtGradientProduct1}" Height="110" Width="110" HorizontalAlignment="Center" VerticalAlignment="Center" 
