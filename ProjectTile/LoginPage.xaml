        <Label x:Name="PleaseWaitLabel" MinHeight="535" Margin="0" MinWidth="685" Background="{StaticResource PtBrushBackgroundBlue}" 
               Content="Attempting login - please wait..." FontSize="16" Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden"
               Cursor="Wait" Grid.ColumnSpan="3" Grid.RowSpan="3" Opacity="0.9"/>        

    </Grid>
</Page>
